{% extends 'layout.twig' %}

{% block title post.name %}

{% block body %}

<h1>{{ post.name }}</h1>

<p class="text-muted"> 
{% if post.category.id %}
  <a href="{{ path('blog.category', {slug: post.category.slug}) }}" title="{{ post.category.name }}">
    {{ post.category.name }}
  </a>
{% endif %}

  {{ post.created_at | ago }} 
</p>

<p>
  {% if post.image %}
  <img src="{{ post.imageUrl }}" alt="{{ post.name }} " style="max-width:100%;">
  {% endif %}  
</p>

<p>
{{ post.content | nl2br }}
</p>
{% endblock %}