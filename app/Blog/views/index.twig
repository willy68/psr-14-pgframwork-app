{% extends 'layout.twig' %}

{% block title %}
	{% if category %}
		Categorie:
		{{ category.name }}
		{% if page > 1 %}, page
			{{ page }}
		{% endif %}
	{% else %}
		Blog
		{% if page > 1 %}, page
			{{ page }}
		{% endif %}
	{% endif %}
{% endblock %}

{% block body %}

	{% if category %}
		<h1>Categorie:
			{{ category.name }}
			{% if page > 1 %}, page
				{{ page }}
			{% endif %}
		</h1>
	{% else %}
		<h1>Bienvenue sur le blog
			{% if page > 1 %}, page
				{{ page }}
			{% endif %}
		</h1>
	{% endif %}

	<div class="row">
		<div class="col-md-9">
			{% for row in posts | batch(3) %}
				<div class="card-deck mb-4">
					{% for post in row %}
					{#<pre>
						{{ dump(post) }}
					</pre>#}
						<div class="card">
							{% if post.category %}
								<div class="card-header">
									{{ post.category.name }}
								</div>
							{% endif %}
							{% if post.image %}
							<img src="{{ post.thumb }}" alt="{{ post.name }} " style="width: 100%;">
							{% endif %}
							<div class="card-body">
								<h4 class="card-title">
									<a href="{{ path('blog.show', {slug: post.slug, id: post.id}) }}">
										{{ post.name }}
									</a>
								</h4>
								<p class="card-text">
									{{ post.content | excerpt | nl2br }}
								</p>
								<p class="text-muted">
								{{ post.created_at | ago }}
								</p>

							</div>
							<div class="card-footer">
								<a href="{{ path('blog.show', {slug: post.slug, id: post.id}) }}" class="btn btn-primary">
									Voir l'article
								</a>
								<a href="{{ path('blog.postShow', {category_id: post.category.id, id: post.id}) }}" class="btn btn-primary">
									Voir l'article
								</a>
								<a href="{{ path('blog.postCategoryShow', {category_slug: post.category.slug, id: post.id}) }}" class="btn btn-primary">
									Voir l'article
								</a>
							</div>
						</div>
					{% endfor %}

				</div>
			{% endfor %}

			{% if category %}
				{{ paginate(posts, 'blog.category', {slug: category.slug}) }}
			{% else %}
				{{ paginate(posts, 'blog.index') }}
			{% endif %}

		</div>
		<div class="col-md-3">
			<ul class="list-group">
        {% for c in categories %}
				<li class="list-group-item {% if c.id == category.id %} active {% endif %}">
						<a style="color:inherit" href="{{ path('blog.category', {slug: c.slug}) }}">
							{{ c.name }}
						</a>
					</li>
				  {% endfor %}
			</ul>
		</div>

	</div>

{% endblock %}
