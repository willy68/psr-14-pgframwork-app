{% extends '@admin/layout.twig' %}

{% block title "Editer un article" %}

{% block body %}

<h1>Edite l'article {{ item.getName }} </h1>

<form action="{{ path(routePrefix ~ '.edit.post', {id: item.getId}) }}" method="POST" enctype="multipart/form-data">

  {% include viewPath ~ "/form.twig" %}

  <button type="submit" class="btn btn-primary">Edite</button>
</form>

{% endblock %}